#!/usr/bin/env beesh

require_version 1.2

SRCDIR=/mnt/lfs/sources
SRCURL[0]="${SRCDIR}/grep-${PKGVERSION}.tar.xz"

PREFIX=${LFS_PREFIX=/tools}
export PATH=${PREFIX}/bin:/bin:/usr/bin

build_in_sourcedir

mee_configure() {
    ${S}/configure \
        --prefix=${PREFIX}
}

mee_build() {
    make ${BEE_MAKEFLAGS}
}

mee_install() {
    make DESTDIR=${D} ${BEE_MAKEFLAGS} install
}
