#!/usr/bin/env beesh

require_version 1.0_rc17

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/mnt/lfs/sources
SRCURL[0]="${SRCDIR}/coreutils-${PKGVERSION}.tar.xz"
PREFIX=${LFS_PREFIX=/tools}
export PATH=${PREFIX}/bin:/bin:/usr/bin

build_in_sourcedir

mee_configure() {
    bee_configure \
        --enable-install-program=hostname
}

mee_install_post() {
    start_cmd cp -v src/su ${D}/tools/bin/su-tools
}
