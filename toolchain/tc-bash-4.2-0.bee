#!/usr/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/mnt/lfs/sources
SRCURL[0]="${SRCDIR}/bash-${PKGVERSION}.tar.gz"
PATCHURL[0]="${SRCDIR}/bash-${PKGVERSION}-fixes-4.patch"
PREFIX=${LFS_PREFIX=/tools}
export PATH=${PREFIX}/bin:/bin:/usr/bin

build_in_sourcedir

mee_configure() {
    bee_configure --without-bash-malloc
}

mee_install_post() {
    start_cmd ln -sv bash ${D}/tools/bin/sh
}
