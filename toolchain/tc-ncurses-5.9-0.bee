#!/usr/bin/env beesh

require_version 1.0_rc23

SRCDIR=/mnt/lfs/sources
SRCURL[0]="${SRCDIR}/ncurses-${PKGVERSION}.tar.gz"
PREFIX=${LFS_PREFIX=/tools}
export PATH=${PREFIX}/bin:/bin:/usr/bin

build_in_sourcedir

mee_configure() {
    bee_configure \
        --with-shared \
        --without-debug \
        --without-ada \
        --enable-overwrite
}
