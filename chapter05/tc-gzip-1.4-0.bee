#
# this is the bee-file for gzip
# see LFS 7.0 chapter 5: 5.25
# http://www.linuxfromscratch.org/lfs/view/7.0/chapter05/gzip.html
#
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="http://ftp.gnu.org/gnu/gzip/gzip-${PKGVERSION}.tar.gz"
: ${LFS_TGT=$(uname -m)-lfs-linux-gnu}
PREFIX=${LFS_PREFIX=/tools}
export PATH=${PREFIX}/bin:/bin:/usr/bin

build_in_sourcedir

mee_configure() {
    start_cmd ${S}/configure \
        --prefix=${PREFIX}
}

mee_build() {
    start_cmd make -j $CPUS
}
