#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"

build_in_sourcedir

mee_configure() {
    bee_configure CHECK_CFLAGS=-I/tools/include \
        CHECK_LIBS="-L/tools/lib -lcheck"
}
