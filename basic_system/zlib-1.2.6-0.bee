#!/bin/env beesh

require_version 1.0_rc23

SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.bz2"

build_in_sourcedir

mee_configure() {
    start_cmd ${S}/configure --prefix=/usr
}

mee_install_post() {
    mkdir -pv ${D}/lib
    mv -v ${D}/usr/lib/libz.so.* ${D}/lib
    ln -sfv ../../lib/libz.so.${PKGVERSION} ${D}/usr/lib/libz.so
}
