#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/patch-2.6.1.tar.bz2"
PATCHURL[0]="/usr/src/patch-2.6.1-test_fix-1.patch"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
