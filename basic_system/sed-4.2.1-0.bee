#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/sed-4.2.1.tar.bz2"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --bindir=/bin --htmldir=/usr/share/doc/sed-4.2.1
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
