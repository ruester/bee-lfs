#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"

SYSCONFDIR=/etc

build_in_sourcedir

mee_configure() {
    bee_configure --disable-grub-emu-usb \
        --disable-efiemu \
        --disable-werror
}
