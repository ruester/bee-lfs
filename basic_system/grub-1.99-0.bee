#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/grub-1.99.tar.gz"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr           \
        --sysconfdir=/etc      \
        --disable-grub-emu-usb \
        --disable-efiemu       \
        --disable-werror
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
