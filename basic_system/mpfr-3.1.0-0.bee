#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/mpfr-3.1.0.tar.bz2"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --enable-thread-safe \
        --docdir=/usr/share/doc/mpfr-3.1.0
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cme make DESTDIR=${D} install
}
