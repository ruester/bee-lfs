#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/linux-${PKGVERSION}.tar.xz"

build_in_sourcedir

mee_build() {
    bee_build mrproper headers_check
}

mee_install() {
    start_cmd make INSTALL_HDR_PATH=dest headers_install
}

mee_install_post() {
    find dest/include \( -name .install -o -name ..install.cmd \) -delete
    mkdir -pv ${D}/usr/include
    cp -rv dest/include/* ${D}/usr/include
}
