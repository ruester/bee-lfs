#!/tools/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/xz-5.0.3.tar.bz2"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --docdir=/usr/share/doc/xz-5.0.3
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
