#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.bz2"

DOCDIR=/usr/share/doc/${PKGFULLNAME}-${PKGVERSION}

build_in_sourcedir

mee_install() {
    bee_install pkgconfigdir=/usr/lib/pkgconfig
}
