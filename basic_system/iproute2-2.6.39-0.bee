#!/tools/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/iproute2-2.6.39.tar.gz"

build_in_sourcedir

mee_patch_post() {
    sed -i '/^TARGETS/s@arpd@@g' misc/Makefile
}

mee_configure() {
    true
}

mee_build() {
    start_cmd make DESTDIR= -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} SBINDIR=/sbin MANDIR=/usr/share/man \
        DOCDIR=/usr/share/doc/iproute2-2.6.39 install
}
