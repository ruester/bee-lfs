#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/gawk-4.0.0.tar.bz2"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --libexecdir=/usr/lib
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
