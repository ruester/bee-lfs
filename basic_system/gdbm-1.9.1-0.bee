#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(grep -c processor /proc/cpuinfo)
SRCURL[0]="/usr/src/gdbm-1.9.1.tar.gz"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --enable-libgdbm-compat
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
