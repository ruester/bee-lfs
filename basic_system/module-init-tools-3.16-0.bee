#!/tools/bin/env beesh
require_version 1.0_rc17

CPUS=$(cat /proc/cpuinfo | grep processor | wc -l)
SRCURL[0]="/usr/src/module-init-tools-3.16.tar.bz2"
PATCHURL="/usr/src/module-init-tools-3.16-man_pages-1.patch"

build_in_sourcedir

mee_configure() {
    DOCBOOKTOMAN=/bin/true ./configure --prefix=/ \
        --enable-zlib-dynamic --mandir=/usr/share/man
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} INSTALL=install install
}
