#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(grep -c processor /proc/cpuinfo)
SRCURL[0]="/usr/src/groff-1.21.tar.gz"

build_in_sourcedir

mee_configure() {
    PAGE=A4 ${S}/configure --prefix=/usr
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}

mee_install_post() {
    ln -sv eqn ${D}/usr/bin/geqn
    ln -sv tbl ${D}/usr/bin/gtbl
}
