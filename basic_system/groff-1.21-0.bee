#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"

build_in_sourcedir

mee_configure() {
    PAGE=A4 bee_configure
}

mee_install_post() {
    ln -sv eqn ${D}/usr/bin/geqn
    ln -sv tbl ${D}/usr/bin/gtbl
}
