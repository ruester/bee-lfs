#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(grep -c processor /proc/cpuinfo)
SRCURL[0]="/usr/src/grep-2.9.tar.gz"

build_in_sourcedir

mee_patch_post() {
    sed -i 's/cp/#&/' tests/unibyte-bracket-expr
}

mee_configure() {
    ${S}/configure --prefix=/usr --bindir=/bin
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}
