#!/usr/bin/env beesh

require_version 1.2

SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"

build_in_sourcedir

mee_patch_pre() {
    sed -i -e '/gets is a/d' lib/stdio.in.h
}

mee_configure() {
    ./configure --prefix=/usr
}

mee_build() {
    make ${BEE_MAKEFLAGS}
}

mee_install() {
    make ${BEE_MAKEFLAGS} DESTDIR=${D} install
}
