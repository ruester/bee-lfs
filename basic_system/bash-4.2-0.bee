#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"
PATCHURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}-fixes-4.patch"

BINDIR=/bin

build_in_sourcedir

mee_configure() {
    bee_configure --htmldir=/usr/share/doc/${PKGFULLNAME}-${PKGVERSION} \
        --without-bash-malloc \
        --with-installed-readline
}
