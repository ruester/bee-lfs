#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(grep -c processor /proc/cpuinfo)
SRCURL[0]="/usr/src/kbd-1.15.2.tar.gz"
PATCHURL[0]="/usr/src/kbd-1.15.2-backspace-1.patch"

build_in_sourcedir

mee_configure() {
    ${S}/configure --prefix=/usr --datadir=/lib/kbd
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}

mee_install_post() {
    mkdir -pv ${D}/bin
    mv -v ${D}/usr/bin/{kbd_mode,loadkeys,openvt,setfont} ${D}/bin
}
