#!/bin/env beesh

require_version 1.0_rc23

BEE_MAKEFLAGS="-j $(grep -c processor /proc/cpuinfo)"
SRCDIR=/sources
SRCURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}.tar.gz"
PATCHURL[0]="${SRCDIR}/${PKGFULLNAME}-${PKGVERSION}-backspace-1.patch"

DATADIR=/lib/kbd

build_in_sourcedir

mee_install_post() {
    mkdir -pv ${D}/bin
    mv -v ${D}/usr/bin/{kbd_mode,loadkeys,openvt,setfont} ${D}/bin
}
