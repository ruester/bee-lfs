#!/bin/env beesh
require_version 1.0_rc17

CPUS=$(grep -c processor /proc/cpuinfo)
SRCURL[0]="/usr/src/psmisc-22.14.tar.gz"

build_in_sourcedir

mee_configure() {
   ${S}/configure --prefix=/usr
}

mee_build() {
    start_cmd make -j $CPUS
}

mee_install() {
    start_cmd make DESTDIR=${D} install
}

mee_install_post() {
    mkdir -pv ${D}/bin
    mv -v ${D}/usr/bin/fuser ${D}/bin
    mv -v ${D}/usr/bin/killall ${D}/bin
}
